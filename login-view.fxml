<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import com.example.tp_camping.controller.LoginController?> <!-- Assurez-vous que le contrôleur est importé -->

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tp_camping.controller.LoginController" spacing="10" alignment="CENTER">
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Mot de passe"/>
    <Button text="Se connecter" onAction="#handleLogin"/>
    <Button text="Créer un compte" onAction="#handleRegister"/>
</VBox>